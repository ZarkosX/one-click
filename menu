            0) break ;;
            *) echo "‚ùå Invalid option"; sleep 1 ;;
        esac
    done
}

# -------------------------------
# Skyport CodeSandbox Menu
# -------------------------------
skyport_codesandbox() {
    while true; do
        clear
        echo "==============================="
        echo " üöÄ Skyport (CodeSandbox)"
        echo "==============================="
        echo "1) Install Skyport Panel"
        echo "2) Install Skyport Node"
        echo "3) Setup 24/7"
        echo "0) Back"
        read -p "Choose an option: " choice

        case $choice in
            1) bash <(curl -s https://raw.githubusercontent.com/Subhanplays/Skyport/main/panel.sh) ;;
            2) bash <(curl -s https://raw.githubusercontent.com/Subhanplays/Skyport/main/node.sh) ;;
