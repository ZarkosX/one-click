}

# -------------------------------
# PufferPanel CodeSandbox Menu
# -------------------------------
pufferpanel_codesandbox() {
    while true; do
        clear
        echo "==============================="
        echo " üê° PufferPanel (CodeSandbox)"
        echo "==============================="
        echo "1) Install PufferPanel"
        echo "2) Create Admin User"
        echo "3) Enable & Start Service"
        echo "0) Back"
        read -p "Choose an option: " choice

        case $choice in
            1) 
                echo "üëâ Installing PufferPanel..."
                bash <(curl -s https://raw.githubusercontent.com/subhanplays/hostingsetups/main/puffer-panel-install)
                ;;
            2) 
                echo "üëâ Creating PufferPanel Admin User..."
                sudo pufferpanel user add
                ;;
            3) 
                echo "üëâ Enabling & Starting PufferPanel Service..."
                sudo systemctl enable --now pufferpanel
                ;;
            0) break ;;
            *) echo "‚ùå Invalid option"; sleep 1 ;;
        esac
    done
}

# -------------------------------
# MAIN MENU
# -------------------------------
while true; do
    clear
    echo "====================================="
    echo " üöÄ PANEL INSTALLER MAIN MENU"
    echo "====================================="
    echo "1) GitHub"
    echo "2) CodeSandbox"
    echo "0) Exit"
    read -p "Choose an option: " main_choice

    case $main_choice in
        1)  # GitHub
            while true; do
                clear
                echo "==============================="
                echo " üìÇ Select Panel (GitHub)"
                echo "==============================="
                echo "1) Pterodactyl"
                echo "2) Skyport"
                echo "0) Back"
                read -p "Choose an option: " panel_choice

                case $panel_choice in
                    1) pterodactyl_github ;;
                    2) skyport_github ;;
                    0) break ;;
                    *) echo "‚ùå Invalid option"; sleep 1 ;;
                esac
            done
            ;;
        2)  # CodeSandbox
            while true; do
                clear
                echo "==============================="
                echo " üìÇ Select Panel (CodeSandbox)"
                echo "==============================="
                echo "1) Pterodactyl"
                echo "2) Skyport"
                echo "3) PufferPanel"
                echo "0) Back"
                read -p "Choose an option: " panel_choice

                case $panel_choice in
                    1) pterodactyl_codesandbox ;;
                    2) skyport_codesandbox ;;
                    3) pufferpanel_codesandbox ;;
                    0) break ;;
                    *) echo "‚ùå Invalid option"; sleep 1 ;;
                esac
            done
            ;;
        0) echo "üëã Exiting..."; exit 0 ;;
        *) echo "‚ùå Invalid option"; sleep 1 ;;
    esac
done
